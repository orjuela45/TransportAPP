<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_addroute"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ix"
        android:backgroundTint="@color/ColorPrimary2" />



        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/logo" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Nombre Dirección"
        android:id="@+id/txtnombredireccion"
        android:backgroundTint="@color/mr_cast_meta_black_scrim"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:singleLine="false"
        android:textColor="@color/mr_cast_meta_black_scrim"
        android:textColorHint="@color/mr_cast_meta_black_scrim" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtdireccion"
        android:layout_below="@id/txtnombredireccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Dirección"
        android:backgroundTint="@color/mr_cast_meta_black_scrim"
        android:ems="10"
        android:fontFamily="@font/muli_extralight"
        android:singleLine="false"
        android:textColor="@color/mr_cast_meta_black_scrim"
        android:textColorHint="@color/mr_cast_meta_black_scrim" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/txtdireccion"
        android:layout_weight="1"
        android:background="@drawable/my_border"
        android:fontFamily="@font/muli_extralight"
        android:text="Agregar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />


</RelativeLayout>