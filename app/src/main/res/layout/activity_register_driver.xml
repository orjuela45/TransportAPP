<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorFondo"
    android:orientation="vertical"
    tools:context=".activities.RegisterDriverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/my_border"
            android:backgroundTint="#423C3C"
            android:orientation="vertical">

            <Button
                android:id="@+id/exit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ix"
                android:backgroundTint="@color/ColorPrimary2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="94dp"
            android:layout_height="64dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:text="Registro para conductor"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:text="Por favor, llenar el formulario para realizar la solicitud de registro para conductor. Recuerde que la respuesta tiene un tiempo de 3 a 5 dÃ­as."
            android:textAlignment="center"
            android:textColor="@color/ColorWhite50"
            android:textSize="15sp"
            android:textStyle="normal" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/ColorPrimary2"
            android:text="1"
            android:textColor="@color/ColorDarkX"
            android:textStyle="bold" />

        <Space
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/colorWhite"
            android:text="2"
            android:textColor="@color/ColorDarkX"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="368dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/request"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/my_border"
            android:backgroundTint="@color/ColorPrimary2"
            android:text="Enviar Solicitud"
            android:textColor="@color/colorWhite"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>